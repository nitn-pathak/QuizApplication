<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizMaster" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">

        <!-- Primary brand color. -->
        <item name="colorPrimary">#034DCE</item>          // Appbar colour
        <item name="colorPrimaryVariant">#070707</item>   //status bar  time , battrey
        <item name="colorOnPrimary">@color/white</item>    // text which comes in actionbar "QuizMaster"
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0A0A0A</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#0A0A0B</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#034DCE</item>          // Appbar colour
        <item name="colorPrimaryVariant">#070707</item>   //status bar  time , battrey
        <item name="colorOnPrimary">@color/white</item>    // text which comes in actionbar "QuizMaster"
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0E0E0E</item>          // date picker
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
</resources>